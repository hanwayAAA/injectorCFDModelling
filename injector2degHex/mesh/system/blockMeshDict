FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale 0.001; //scales to mm 

vertices
(
    (-0.5 -0.5 -0.5) // 0
    (-0.5 80.5 -0.5) // 1
    (30.5 80.5 -0.5) // 2
    (30.5 -0.5 -0.5) // 3
    (-0.5 -0.5 1.5) // 4
    (-0.5 80.5 1.5) // 5
    (30.5 80.5 1.5) // 6
    (30.5 -0.5 1.5) // 7
);

blocks
(
    //hex (0 1 2 3 4 5 6 7) //vertex numbers
    hex (4 5 6 7 0 1 2 3)
    (20 20 30) //cells in each direction
    simpleGrading (1 1 1) //cell expansion ratios
    //coarse grid - we will refine in snappyHexMeshDict
);

edges
(
);

boundary
(
    allBoundary//Don't worry about these settings
    {
        type patch;
        faces
        (
            (3 7 6 2)
            (0 4 7 3)
            (2 6 5 1)
            (1 5 4 0)
            (0 3 2 1)
            (4 5 6 7)
        );
    }
);

