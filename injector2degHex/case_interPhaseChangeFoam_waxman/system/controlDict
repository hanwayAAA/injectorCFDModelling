FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     interPhaseChangeFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime; //used to be endTime, writeNow for emergency stop

endTime         1;//was 3ms

deltaT          1e-4;//1e-5;

writeControl    adjustable;

writeInterval   0.05;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

runTimeModifiable yes;

adjustTimeStep  on;

maxCo           2; 

maxAlphaCo      2;

maxDeltaT       1;

