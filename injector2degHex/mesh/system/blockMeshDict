    //         (0 5 6 3)
            //LP: the following describe the original hexahedron
            // (3 7 6 2)
            // (0 4 7 3)
            // (2 6 5 1)
            // (1 5 4 0)
            // (0 3 2 1)
            // (4 5 6 7)
        // );
    // }
);


