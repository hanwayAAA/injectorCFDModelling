FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;//0.001; LP: .stl has no dimensions

vertices
(
    (-2   -2   0) // 0
    ( 32  -2  -2) // 1
    ( 32   82 -2) // 2
    (-2    82  0) // 3
    (-2   -2   3) // 4
    ( 32  -2   3) // 5
    ( 32   82  3) // 6
    (-2    82  3) // 7
);

blocks
(
    hex (0 1 2 3 0 5 6 3) (200 20 200) simpleGrading (5 1 5)//coarse grid - we will refine in snappyHexMeshDict
    //hex collapses vertices onto each other to create 6 sided wedge block. here we collapse 4 to 0 & 7 to 3
);

edges
(
);

boundary
(
    allBoundary//Don't worry about these settings
    {
        type patch;
        faces
        (
            (3 3 6 2)
            (0 0 3 3)
            (2 6 5 1)
            (1 5 0 0)
            (0 3 2 1)
            (0 5 6 3)
            // (3 7 6 2)
            // (0 4 7 3)
            // (2 6 5 1)
            // (1 5 4 0)
            // (0 3 2 1)
            // (4 5 6 7)
        );
    }
);


